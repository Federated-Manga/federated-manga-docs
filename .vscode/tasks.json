    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update Git Submodules",
            "type": "shell",
            "command": "git submodule update --init --recursive"
        },
        {
            "label": "Run Hugo Dev Server",
            "type": "shell",
            "command": "hugo server --themesDir ./themes"
        }
    ]
}